@import 'mixins'

#app .stage {
  vbox()
  box-flex(1)

  background: url('bg-grid.png')
  position: relative

  .element.selected {
    // outline: 1px dotted rgba(0, 0, 0, 1)
  }

  .resizing .thumb {
    position: absolute
    width: 6px
    height: 6px
    background: #FFF
    border: 1px solid #000
    cursor: pointer

    &.tl {
      left: -3px
      top: -3px
    }

    &.tt {
      margin-left: -3px
      left: 50%
      top:-3px
    }

    &.tr {
      right: -3px
      top: -3px
    }

    &.rr {
      right: -3px
      top: 50%
      margin-top: -3px
    }

    &.bl {
      left: -3px
      bottom: -3px
    }

    &.bb {
      left: 50%
      bottom: -3px
      margin-left: -3px
    }

    &.br {
      right: -3px
      bottom: -3px
    }

    &.ll {
      top: 50%
      left: -3px
      margin-top: -3px
    }
  }

  .selectArea {
    position: absolute
    border: 1px solid rgba(0, 0, 250, 0.15)
    background: rgba(0, 0, 250, 0.1)
    z-index: 1000
  }
}