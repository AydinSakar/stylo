.gradientPicker {
  position: relative
  height: 20px
  border-radius: 3px
  border: 1px solid darken(#CCC, 10%)
  box-shadow: 0 1px 1px #FFF

  .slider {
    position: absolute
    width: 10px
    height: 16px
    bottom: 0

    margin: 0 0 -8px -5px
    border-radius: 3px
    border: 1px solid rgba(0, 0, 0, 0.3)
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2)

    background: url(grid.png) repeat
    cursor: pointer

    .inner {
      border-radius: 3px
      height: 16px
    }
  }

  .colorPreview {
    border: 0
    width: auto
    margin: 0
    border: 0

    .inner {
      width: auto
    }
  }
}