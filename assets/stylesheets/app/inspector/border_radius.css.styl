@import 'mixins'

#app .inspector .borderRadius {
  .borders {
    hbox()
    margin: 3px auto 10px auto
    vbg-gradient(lighten(rgba(238, 238, 238, 1), 80%), rgba(238, 238, 238, 0.9))
    border: 1px solid #CCC
    border-radius: 5px
    box-shadow: 0 1px 0 #FFF
    -webkit-box-pack: center
    width: 185px

    div {
      overflow: hidden
      border-right: 1px solid #CCC

      &:last-child {
        border-right: none
      }

      &:active, &.active {
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2)
      }
    }

    span {
      display: block
      border-box()
      width: 12px
      height: 12px
      margin: 5px 12px
      border: 1px solid #777
      cursor: pointer
    }

    .borderRadius span {
      border-radius: 4px
    }

    .borderRadiusTopLeft span {
      border-top-left-radius: 4px
    }

    .borderRadiusTopRight span {
      border-top-right-radius: 4px
    }

    .borderRadiusBottomRight span {
      border-bottom-right-radius: 4px
    }

    .borderRadiusBottomLeft span {
      border-bottom-left-radius: 4px
    }
  }

  label {
    hbox()

    input {
      display: block
    }

    input[type=range] {
      margin: 5px
      box-flex(1)
    }

    input[type=number] {
      width: 40px
    }
  }

  &.disabled {
    .borders, input {
      opacity: 0.6
    }
  }
}