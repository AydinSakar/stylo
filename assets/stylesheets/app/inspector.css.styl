@import 'mixins'

#app .inspector {
  width: 220px
  position: absolute
  right: 0px
  bottom: 0px
  top: 35px
  box-shadow: inset 1px 0 2px rgba(0, 0, 0, 0.3)
  background: #F5F5F5
  color: #000
  -webkit-user-select: none
  overflow-x: auto

  h3 {
    line-height: 20px
    padding: 0 5px
    margin: 0
    vbg-gradient(#F1F1F1, #DDDDDD)
    border-left: 1px solid #C6C6C6
    border-top: 1px solid #DDDDDD
    border-bottom: 1px solid #C6C6C6
    color: #777
    text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.8)
  }

  article {
    overflow: hidden
    padding: 10px
  }

  label {
    display: block

    span {
      display: inline-block
      width: 30px
    }

    span:after {
      content: ":"
    }

    input {
      margin: 3px
    }
  }

  input[disabled] {
    opacity: 0.8
  }

  input[type=number] {
    width: 35px
  }

  .colorInput {
    .preview {
      width: 30px
      height: 30px
      display: inline-block

      border: 1px solid rgba(0, 0, 0, 0.3)
      padding: 3px
      cursor: pointer
    }

    input {
      display: inline-block
    }
  }

  .colorPreview {
    width: 40px
    height: 16px
    display: inline-block
    margin: 3px

    border: 1px solid #9B9B9B
    cursor: pointer

    background: url(grid.png) repeat

    .inner {
      width: 40px
      height: 16px
    }
  }

  // .preview {
  //   border: 1px solid rgba(0, 0, 0, 0.3)
  //   padding: 3px
  //   cursor: pointer
  //   margin: 5px 0 0 0
  //   background: url(grid.png) repeat
  // }
  //
  // .preview, .preview .inner {
  //   width: 30px
  //   height: 30px
  // }

  .positionPicker {
    width: 40px
    height: 40px

    background: #FFF url(crosshairs.png) center center no-repeat
    border: 1px solid rgba(0, 0, 0, 0.3)
    cursor: pointer
    position: relative

    .ball {
      position: absolute
      width: 12px
      height: 12px
      margin: -6px 0 0 -6px

      vbg-gradient(#FFF, #EFEFEF)
      border-radius: 50%
      border: 1px solid rgba(0, 0, 0, 0.3)
    }
  }

  .background {
    select {
      width: 130px
      margin-left: 5px
    }

    .preview {
      margin: 5px 0 0 60px
    }

    span {
      width: 50px
    }
  }

  .opacity label {
    input[type=range] {
      width: 135px
      margin: 5px
      position: relative
      bottom: -4px
    }

    input[type=number] {
      width: 40px
    }
  }

  .boxShadow {
    .list {
      background: #FFF
      border-radius: 4px
      margin: 10px 10px 0 10px
      overflow: hidden
      border: 1px solid rgba(0, 0, 0, 0.25)
      box-shadow: 0 1px 1px #FFF

      .items {
        min-height: 30px
        max-height: 100px
        overflow-x: auto
      }

      .item {
        padding: 10px
        cursor: pointer
        border-bottom: 1px solid rgba(0, 0, 0, 0.25)

        &:last-child {
          border-bottom: none
        }

        &.selected {
          color: #FFF
          text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.3)
          vbg-gradient(#BAC4D8, #9AA8C7)
        }
      }

      footer {
        border-top: 1px solid rgba(0, 0, 0, 0.15)
        inset-line(0.8)
        vbg-gradient(lighten(rgba(238, 238, 238, 1), 80%), rgba(238, 238, 238, 0.9))
        -webkit-border-radius: 0 0 4px 4px
        overflow: hidden

        button {
          margin: 0
          display: block
          float: left

          color: #5B5B5B;
          font-size: 14px;
          font-weight: bold
          text-transform: uppercase
          text-shadow: 0 1px 1px #FFF;
          padding: 2px 12px
          box-shadow: inset -1px 0 1px rgba(255, 255, 255, 0.5)
          border: none
          border-right: 1px solid rgba(0, 0, 0, 0.15)
          background: none

          &:active {
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2)
          }
        }
      }
    }

    .positionPicker {
      margin: 3px 5px 3px 0
    }

    label {
      span {
        margin-left: 3px
        width: auto
      }
    }

    .blur span, .color span {
      width: 33px
    }

    .color span {
      position relative
      top: -6px
    }
  }
}