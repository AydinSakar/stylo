@import 'mixins'

#app .header {
  height: 35px
  line-height: 35px
  vbg-gradient(#5F9FE6, #3A7AC1)
  // vbg-gradient(#EAEAEA, #B1B1B1)
  vbg-gradient(#8F9398, #5D646D)

  hbox()

  h1 {
    display: block
    margin: 0 10px
    font: 23px arial,lucida,helvetica,arial,sans-serif
    font-weight: normal
    color: #FFF
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.3)
    line-height: 33px
    box-flex(1)
  }

  nav {
    height: 35px
    margin-right: 30px
    hbox()

    div {
      padding: 8px 12px
      border-left: 1px solid rgba(0, 0, 0 ,0.3)
      box-shadow: inset 1px 0 0 rgba(255, 255, 255, 0.2)

      &:active {
        box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.3)
      }
    }

    border-right: 1px solid rgba(0, 0, 0 ,0.3)
    box-shadow: 1px 0 0 rgba(255, 255, 255, 0.2)

    span {
      height: 20px
      width: 20px

      display: block
      background: rgba(0, 0, 0, 0.2)
      box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.35), 0 1px 0 rgba(255, 255, 255, 0.2)

      color: #FFF
      text-shadow: 0 -1px 0 rgba(0, 0, 0 ,0.3)
      font-weight: bold
      text-transform: uppercase
      font-size: 11px
    }

    .ellipsis span {
      border-radius: 50%
    }
  }
}