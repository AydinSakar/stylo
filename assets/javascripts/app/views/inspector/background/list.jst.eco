<div class="items">
  <% for background in @backgrounds: %>
    <div class="item" title="<%= background.toString() %>">
      <div class="preview" style="background: <%= background.toString() %>"></div>
      <span><%= background.toDisplayString?() or background.toString() %></span>
    </div>
  <% end %>
</div>

<footer>
  <button class="plus">+</button>
  <button class="minus">-</button>
</footer>